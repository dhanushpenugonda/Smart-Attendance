<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <style>
    .table{
        margin: 5% 15% 10%;
        width: 70%;
    }
    body{
        padding-top: 5%;
    }
    .navbar{
        height: 10%;
        background-color: aliceblue;

    }
    .first-color { 
        /* background: #ffffff;  */
        background: aliceblue;
    }
    .second-color { 
        background: #7CB9E8;
    }
    .third-color { 
        /* background: rgb(240, 240, 240); */
        background: #B9D9EB;
    }
    .fourth-color { 
        background: #ffffff; 
    }
    </style>
  </head>
  <body class="second-color">
    <%- include('header', {user: user}) %>
    <div class="container">
    <h1><%= course_id %></h1>
    <h2>Date: <%= date_time %></h2>
    <h2>Slot: <%= slot %></h2>
    <table class="table table-striped table-light border-dark">
        <thead class="table-dark">
        <tr>
            <th scope="col">Roll No</th>
            <th scope="col">Status</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i=0; i < result.length; i++) { %>
            <tr>
                <th scope="row"><%= result[i].roll_no %></th>
                <td><select class="form-select">
                    <% if(result[i].status == "Present"){ %>
                        <option value="Present" selected>Present</option>
                    <% } else{ %>
                        <option value="Present">Present</option>
                    <% } %>
                    <% if(result[i].status == "Absent"){ %>
                        <option value="Absent" selected>Absent</option>
                    <% } else{ %>
                        <option value="Absent">Absent</option>
                    <% } %>
                    <% if(result[i].status == "OD"){ %>
                        <option value="OD" selected>OD</option>
                    <% } else{ %>
                        <option value="OD">OD</option>
                    <% } %>
                  </select></td>
            </tr>
        <% } %>
        </tbody>
    </table>
    </div>
    <%- include('footer') %>
  </body>
</html>